<div id="fh5co-started" class="fh5co-section animate-box" style="background-image: url(/Template/images/hero_1.jpeg);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="row animate-box text-capitalize">
                <h2 style="color:#B8860B">選擇收貨方式</h2>

                <p>
                    [ @Html.ActionLink("繼續購物", "ProductCategory", "Home") ]
                    [ @Html.ActionLink("查看購物明細", "Index") ]

                </p>

                <hr />

                <div class="col-md-6 col-md-push-6 col-sm-6 col-sm-push-6" style="left:0px ">
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="OrderName">訂購人</label>
                            <input type="text" class="form-control" id="OrderName">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="ShipNname">收件人</label>
                            <input type="text" class="form-control" id="ShipNname">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="Phone">連絡電話</label>
                            <input type="text" class="form-control" id="Phone">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="Address">地址</label>
                            <input type="text" class="form-control" id="Address">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="Delivery">寄送方式</label>
                            <select name="many" id="Delivery" class="form-control custom_select">
                                <option value="Cat">1.宅配</option>
                                <option value="Seven">2.7-11</option>
                                <option value="Family">3.全家</option>
                            </select>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="RequireDate">希望配送日期</label>
                            <input type="text" class="form-control" id="RequireDate">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="CompanyCode">統一編號</label>
                            <input type="text" class="form-control" id="CompanyCode">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="Heading">發票抬頭</label>
                            <input type="text" class="form-control" id="Heading">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="Invoice">發票型別</label>
                            <select name="many" id="Delivery" class="form-control custom_select">
                                <option value="ThreeType">1.三聯式</option>
                                <option value="TwoTypw">2.二聯式</option>
                                <option value="EType">3.電子發票</option>
                            </select>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-primary btn-outline btn-lg" value="送出">
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
