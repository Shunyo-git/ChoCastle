@model ChoCastle.Models.ProductCategory
@{
    ViewBag.Title = "CategoryCreate";
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}

<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i>產品分類新增</h3>
        <div class="row mt">
            <!--  DATE PICKERS -->
            <div class="col-lg-12">
                <div class="form-panel">
                    <form class="form-horizontal style-form" method="post">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.CategoryName, "分類名稱", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-3 col-xs-11">
                                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control form-control-inline input-medium default-date-picker", size = "16", type = "text", value = "" } })
                                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "help-block" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.isDisplay, "上架情況", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-3 col-xs-11">
                                @Html.RadioButtonFor(model => model.isDisplay, true) @Html.Label("上架")
                                @Html.RadioButtonFor(model => model.isDisplay, false) @Html.Label("下架")
                                @Html.ValidationMessageFor(model => model.isDisplay, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.SortID, "排序值", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-3 col-xs-11">
                                @Html.EditorFor(model => model.SortID, new { htmlAttributes = new { @class = "form-control form-control-inline input-medium default-date-picker", size = "16", type = "number", value = "", min = 1 } })
                                @Html.ValidationMessageFor(model => model.SortID, "", new { @class = "help-block" })
                            </div>
                        </div>
                        <div style="text-align:center">
                            <button type="submit" class="btn btn-warning">儲存</button>
                        </div>
                    </form>
                </div>
                <!-- /form-panel -->
            </div>
            <!-- /col-lg-12 -->
        </div>
    </section>
    <!-- /wrapper -->
</section>
<!-- /MAIN CONTENT -->
<!--main content end-->