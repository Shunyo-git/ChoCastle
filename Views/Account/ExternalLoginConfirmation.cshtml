@model ChoCastle.Models.ExternalLoginConfirmationViewModel
@{ ViewBag.Title = "註冊"; }



<br />
<br />
<br />
<br />
<br />
<br />
<br />

<div id="fh5co-started" class="fh5co-section animate-box" style="background-image: url(/Template/images/hero_1.jpeg);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">

        <div class="row animate-box">

            <div class="col-md-12 text-center fh5co-heading">
                <h1 style="color: #B8860B"><strong>註冊</strong></h1>
                <h3 style="color: #B8860B">關聯您的 @ViewBag.LoginProvider 帳戶</h3>




                @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()


                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <p class="text-info">
                        您已成功向下列單位驗證: <strong>@ViewBag.LoginProvider</strong>。
                        請在下面輸入此網站的使用者名稱，然後按一下 [註冊] 按鈕完成
                        登入。
                    </p>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", style = "font-family:'Microsoft JhengHei" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>

                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "font-family:'Microsoft JhengHei" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-primary btn-outline" value="註冊" />
                        </div>
                    </div>}

            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
