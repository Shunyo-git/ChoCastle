@model List<ChoCastle.Models.Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}

<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> 訂單管理</h3>
        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover">
                        <h4><i class="fa fa-angle-right"></i> 訂單管理列表</h4>
                        <hr>
                        <thead>
                            <tr>
                                <th><i class="fa fa-bullhorn"></i> 訂單編號</th>
                                <th class="hidden-phone"><i class="fa fa-question-circle"></i> 訂購人</th>
                                <th><i class="fa fa-bookmark"></i> 訂購日期</th>
                                <th><i class=" fa fa-edit"></i> 訂單金額</th>
                                <th><i class=" fa fa-edit"></i> 付款時間</th>
                                <th><i class=" fa fa-edit"></i> 出貨狀態</th>
                                <th><i class=" fa fa-edit"></i> 操作</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                foreach (var order in Model)
                                {
                            <tr>
                                <td>
                                    <a href="basic_table.html#">@order.OrderID</a>
                                </td>
                                <td class="hidden-phone">@order.OrderName</td>
                                <td>@order.OrderDate </td>
                                <td>$ @order.TotalAmount</td>
                                <td>@order.DeliverDate </td>
                                <td>@order.OrderStatus</td>
                                <td>
                                    <button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>
                                    <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i>訂單明細</button>
                                    <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
        </div>
        <!-- /row -->
    </section>
</section>
<!-- /MAIN CONTENT -->
<!--main content end-->